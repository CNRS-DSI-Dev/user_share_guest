<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
 <name>*dbname*</name>
 <overwrite>false</overwrite>
 <charset>utf8</charset>
 <table>
  <name>*dbprefix*user_guest</name>
  <declaration>
    <field>
      <name>uid</name>
      <type>text</type>
      <notnull>true</notnull>
      <length>64</length>
    </field>
    <field>
      <name>accepted</name>
      <type>boolean</type>
      <default>false</default>
      <notnull>true</notnull>
    </field>
    <field>
      <name>is_active</name>
      <type>boolean</type>
      <notnull>true</notnull>
      <default>false</default>
    </field>
    <field>
      <name>date_creation</name>
      <type>timestamp</type>
      <notnull>true</notnull>
      <default>CURRENT_TIMESTAMP</default>
    </field>
    <field>
      <name>date_expiration</name>
      <type>timestamp</type>
      <notnull>true</notnull>
      <default>9999-12-31 00:00:00</default>
    </field>
    <field>
      <name>token</name>
      <type>text</type>
      <notnull>true</notnull>
      <length>255</length>
    </field>
  </declaration>
</table>
<table>
  <name>*dbprefix*guest_sharer</name>
  <declaration>
    <field>
      <name>uid_sharer</name>
      <type>text</type>
      <notnull>true</notnull>
      <length>64</length>
    </field>
    <field>
      <name>uid_guest</name>
      <type>text</type>
      <notnull>true</notnull>
      <length>64</length>
    </field>
    <field>
      <name>item_type</name>
      <type>text</type>
      <notnull>true</notnull>
      <length>64</length>
    </field>
    <field>
      <name>item_source</name>
      <type>text</type>
      <notnull>true</notnull>
      <length>255</length>
    </field>
  </declaration>
</table>
</database>
